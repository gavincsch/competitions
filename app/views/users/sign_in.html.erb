<div class="login-container col-xs-12 col-sm-9 col-md-8">
  <div class="login-title row"> Blair Login</div>
  <div class="row">
    <div class="col-xs-12">
      <%= render 'layouts/messages' %>
      <div class="login">
        <%= form_tag({:controller => 'sessions', :action => 'new'}, :class => 'form-horizontal', :role => 'form') do %>
            <div class="form-group">
              <%= label_tag(:email, nil, :class => 'col-sm-3 control-label') %>
              <div class="col-sm-8">
                <%= text_field_tag(:email, nil, :class => 'form-control') %>
              </div>
            </div>
            <div class="form-group">
              <%= label_tag(:password, nil, :class => 'col-sm-3 control-label') %>
              <div class="col-sm-8">
                <%= password_field_tag(:password, nil, :class => 'form-control') %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-6">
                <%= submit_tag("Log In", {:class => 'btn btn-default'}) %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
